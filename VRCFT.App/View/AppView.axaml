<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"

		xmlns:vm="using:VRCFT.App.ViewModel"
		xmlns:component="using:VRCFT.App.ViewComponent"
		xmlns:service="using:VRCFT.App.Service"

		x:Class="VRCFT.App.View.AppView"
		x:DataType="vm:AppViewModel"

		d:DesignWidth="1100"
		d:DesignHeight="700"
		Width="1100"
		Height="700"

		Icon="/Assets/VrcftTool.ico"
		Title="AppView"

		Background="Transparent"
		TransparencyLevelHint="Mica"
		TransparencyBackgroundFallback="#222">

	<Design.DataContext>
		<vm:AppViewModel />
	</Design.DataContext>

	<Window.Styles>
		<Style Selector="Slider">
			<!-- Bind static ConfigManager.Config.SliderTicksEnabled -->
			<Setter Property="IsSnapToTickEnabled"
					Value="{Binding Source={x:Static service:ConfigManager.Config}, Path=SliderTicksEnabled}" />
			<Setter Property="TickPlacement"
					Value="Outside" />
			<Setter Property="TickFrequency"
					Value="0.1" />

			<!-- The ToolTip shows the current value when dragging the slider -->
			<Setter Property="ToolTip.Placement"
					Value="Bottom" />
			<Setter Property="ToolTip.Tip">
				<Binding Path="Value"
						 StringFormat="F2"
						 RelativeSource="{RelativeSource Self}" />
			</Setter>
		</Style>
	</Window.Styles>

	<Grid RowSpacing="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- UI -->
		<Grid Grid.Row="0"
			  ColumnSpacing="5"
			  RowSpacing="5"
			  Margin="5,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Border Grid.Row="0"
					Grid.Column="0"
					BorderBrush="{DynamicResource UiBorder}"
					BorderThickness="1"
					CornerRadius="5">
				<component:LeftEyeControl />
			</Border>

			<Border Grid.Row="0"
					Grid.Column="1"
					BorderBrush="{DynamicResource UiBorder}"
					BorderThickness="1"
					CornerRadius="5">
				<component:RightEyeControl />
			</Border>

			<Border Grid.Row="2"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Padding="10"
					BorderBrush="{DynamicResource UiBorder}"
					BorderThickness="1"
					CornerRadius="5">

			</Border>

		</Grid>

		<Border Grid.Row="1"
				Margin="5,0,5,5"
				Padding="5"
				BorderBrush="{DynamicResource UiBorder}"
				BorderThickness="1"
				CornerRadius="5">

			<StackPanel Grid.Column="2"
						VerticalAlignment="Center"
						HorizontalAlignment="Right"
						Orientation="Horizontal"
						Spacing="5">

				<Button>
					Unused
				</Button>

				<Button Command="{Binding RandomMessage}">
					Random MessageBox
				</Button>

				<Button Command="{Binding OpenSettings}">
					Settings
				</Button>

				<Button Command="{Binding OpenAppData}">
					AppData
				</Button>

			</StackPanel>

		</Border>

	</Grid>

</Window>