<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"

		xmlns:vm="using:VRCFT.App.ViewModel"
		xmlns:component="using:VRCFT.App.ViewComponent"

		x:Class="VRCFT.App.View.AppView"
		x:DataType="vm:AppViewModel"

		d:DesignWidth="1100"
		d:DesignHeight="700"
		Height="1100"
		Width="700"

		Icon="/Assets/VrcftTool.ico"
		Title="AppView"

		Padding="5,0,5,5"
		Background="Transparent"
		TransparencyLevelHint="Mica"
		TransparencyBackgroundFallback="#222">

	<Design.DataContext>
		<vm:AppViewModel />
	</Design.DataContext>

	<Window.Styles>
		<Style Selector="Slider">
			<Setter Property="IsSnapToTickEnabled" Value="{Binding SliderTicksEnabled}" />
			<Setter Property="TickPlacement" Value="Outside" />
			<Setter Property="TickFrequency" Value="0.1" />
		</Style>
  	</Window.Styles>

	<Grid RowSpacing="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Border Grid.Row="0"
				Padding="10"
				BorderBrush="#444"
				BorderThickness="1"
				CornerRadius="5">
			<StackPanel VerticalAlignment="Center"
						Orientation="Horizontal"
						Spacing="10">

				<CheckBox Content="Send OSC Messages"
						  IsChecked="{Binding SendingEnabled, Mode=TwoWay}" />

				<Rectangle Width="1"
						   Fill="#444" />

				<CheckBox Content="Sync Left/Right Look"
						  IsChecked="{Binding SyncEyeLook, Mode=TwoWay}" />

				<Rectangle Width="1"
						   Fill="#444" />

				<CheckBox Content="Use Simplified Expressions"
						  IsChecked="{Binding SimplifiedExpressions, Mode=TwoWay}" />

				<Rectangle Width="1"
						   Fill="#444" />

				<CheckBox Content="Slider Ticks"
						  IsChecked="{Binding SliderTicksEnabled, Mode=TwoWay}" />
						  
				<Rectangle Width="1"
						   Fill="#444" />

				<ComboBox Width="120"
						  ItemsSource="{Binding AvailableThemes}"
						  SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" />

			</StackPanel>
		</Border>

		<!-- UI -->
		<Grid Grid.Row="1"
			  ColumnSpacing="5"
			  RowSpacing="5">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Border Grid.Row="0"
					Grid.Column="0"
					BorderBrush="#444"
					BorderThickness="1"
					CornerRadius="5">
				<component:LeftEyeControl />
			</Border>

			<Border Grid.Row="0"
					Grid.Column="1"
					BorderBrush="#444"
					BorderThickness="1"
					CornerRadius="5">
				<component:RightEyeControl />
			</Border>

			<Border Grid.Row="2"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Padding="10"
					BorderBrush="#444"
					BorderThickness="1"
					CornerRadius="5">

			</Border>

		</Grid>

	</Grid>

</Window>