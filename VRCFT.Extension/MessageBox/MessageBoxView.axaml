<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"

		xmlns:local="using:VRCFT.Extension.MessageBox"

		x:Class="VRCFT.Extension.MessageBox.MessageBoxView"
		x:DataType="local:MessageBoxViewModel"

		SizeToContent="WidthAndHeight"
		MaxWidth="450"

		Title="{Binding Title}"

		CanMinimize="False"
		CanMaximize="False"
		CanResize="False"

		Padding="5,0,5,5"
		Background="Transparent"
		TransparencyLevelHint="Mica"
		TransparencyBackgroundFallback="#222">

	<Grid RowSpacing="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Border Grid.Row="0"
				Padding="15"
				BorderBrush="{DynamicResource UiBorder}"
				BorderThickness="1"
				CornerRadius="5">

			<Grid VerticalAlignment="Center"
				  HorizontalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Image Grid.Column="0"
					   Margin="0,0,15,0"
					   Width="45"
					   Height="45"
					   Source="{Binding Icon}"
					   IsVisible="{Binding Icon, Converter={x:Static ObjectConverters.IsNotNull}}" />

				<!-- Label with text-wrapping -->
				<TextBlock Grid.Column="1"
						   VerticalAlignment="Center"
						   TextWrapping="Wrap"
						   Text="{Binding Text}" />

			</Grid>

		</Border>

		<Border Grid.Row="1"
				Padding="5"
				BorderBrush="{DynamicResource UiBorder}"
				BorderThickness="1"
				CornerRadius="5">

			<!-- Show Buttons depending on DataContext.Buttons -->
			<Grid MinWidth="200">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0"
						Classes="Danger"
						HorizontalAlignment="Left"
						Command="{Binding ResultNo}"
						IsVisible="{Binding ShowNoButton}">
						No
				</Button>

				<Button Grid.Column="0"
						Classes="Tertiary"
						HorizontalAlignment="Left"
						Command="{Binding ResultCancel}"
						IsVisible="{Binding ShowCancelButton}">
						Cancel
				</Button>

				<Button Grid.Column="1"
						Classes="Success"
						HorizontalAlignment="Right"
						Command="{Binding ResultYes}"
						IsVisible="{Binding ShowYesButton}">
						Yes
				</Button>

				<Button Grid.Column="1"
						Classes="Tertiary"
						HorizontalAlignment="Right"
						Command="{Binding ResultOk}"
						IsVisible="{Binding ShowOkButton}">
						Ok
				</Button>

			</Grid>

		</Border>

	</Grid>

</Window>
